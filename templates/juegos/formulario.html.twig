{% extends 'base.html.twig' %}

{% block body %}
{# banner #}
<section class="normal-breadcrumb set-bg" data-setbg="img/normal-breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Nuevo Juego</h2>
                    <p>Inserte los datos en el formulario para crear un nuevo juego</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="c-cuerpo">

    <div class="container">
        <div class="row justify-content-center">
            {{ form_start(formuJuego, { 'attr': {'class': 'col-10 row c-formu-juego '}}) }}

            <div class="input__item col-6">
                {{ form_label(formuJuego.nombre) }}
                {{ form_widget(formuJuego.nombre) }}
                {{ form_errors(formuJuego.nombre) }}
            </div>

            <div class="input__item col-6 row">
                {{ form_label(formuJuego.descripcion, 'Descripci√≥n', { 'label_attr': {'class': 'col-3'}}) }}
                {{ form_widget(formuJuego.descripcion, { 'attr': {'class': 'col-9'}}) }}
                {{ form_errors(formuJuego.descripcion, { 'attr': {'class': 'col-12'}}) }}
            </div>

            <div class="col-6 mt-4">
                <div class="input__item col-12 row align-items-baseline">
                    <p class="col-3 h6 p-0 text-light">Jugadores:</p>
                    {{ form_label(formuJuego.altoTablero, 'Desde:', { 'label_attr': {'class': 'pr-1'}}) }}
                    {{ form_widget(formuJuego.minJugadores, { 'attr': {'class': 'col-2'}}) }}

                    {{ form_label(formuJuego.altoTablero, 'Hasta:', { 'label_attr': {'class': 'pr-1 pl-2'}}) }}
                    {{ form_widget(formuJuego.maxJugadores, { 'attr': {'class': 'col-2'}}) }}

                    {{ form_errors(formuJuego.minJugadores, { 'attr': {'class': 'col-12'}}) }}
                    {{ form_errors(formuJuego.maxJugadores, { 'attr': {'class': 'col-12'}}) }}
                </div>

                <div class="input__item col-12 row align-items-baseline">
                    <p class="col-4 h6 p-0 text-light">Dimensiones:</p>
                    {{ form_label(formuJuego.altoTablero, 'Alto:', { 'label_attr': {'class': 'pr-1'}}) }}
                    {{ form_widget(formuJuego.altoTablero, { 'attr': {'class': 'col-2'}}) }}

                    {{ form_label(formuJuego.altoTablero, 'Ancho:', { 'label_attr': {'class': 'pr-1 pl-2'}}) }}
                    {{ form_widget(formuJuego.anchoTablero, { 'attr': {'class': 'col-2'}}) }}

                    {{ form_errors(formuJuego.altoTablero, { 'attr': {'class': 'col-12'}}) }}
                    {{ form_errors(formuJuego.anchoTablero, { 'attr': {'class': 'col-12'}}) }}
                </div>
            </div>

            <div class="input__item col-6 mt-4">
                {{ form_label(formuJuego.imagen) }}
                {{ form_widget(formuJuego.imagen) }}
                {{ form_errors(formuJuego.imagen) }}
            </div>

            <div class="col-12">
                <button type="submit" class="site-btn">crear</button>
            </div>

            {{ form_end(formuJuego) }}
        </div>
    </div>

</section>
{% endblock %}